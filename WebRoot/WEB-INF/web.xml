<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>    
    <servlet-name>Foodservlet</servlet-name>
    <servlet-class>com.servlets.Foodservlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>DeskServlet</servlet-name>
    <servlet-class>com.servlets.DeskServlet</servlet-class>
  </servlet>
  <servlet>   
    <servlet-name>employeeServlet</servlet-name>
    <servlet-class>com.servlets.employeeServlet</servlet-class>
  </servlet>
  <servlet>    
    <servlet-name>do_client_inter</servlet-name>
    <servlet-class>com.servlets.do_client_inter</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>foodManager</servlet-name>
    <servlet-class>com.servlets.foodManager</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>DeskSessionServlet</servlet-name>
    <servlet-class>com.servlets.DeskSessionServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginFilter</servlet-name>
    <servlet-class>com.filter.LoginFilter</servlet-class>
  </servlet>






  <servlet-mapping>
    <servlet-name>Foodservlet</servlet-name>
    <url-pattern>/servlet/Foodservlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeskServlet</servlet-name>
    <url-pattern>/servlet/DeskServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>employeeServlet</servlet-name>
    <url-pattern>/servlet/employeeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>do_client_inter</servlet-name>
    <url-pattern>/servlet/do_client_inter</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>foodManager</servlet-name>
    <url-pattern>/servlet/foodManager</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DeskSessionServlet</servlet-name>
    <url-pattern>/servlet/DeskSessionServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginFilter</servlet-name>
    <url-pattern>/servlet/LoginFilter</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
